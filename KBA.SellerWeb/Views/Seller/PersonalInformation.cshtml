@using KBA.SellerApplication.Contract.Seller
@model DashboardDto

<div id="editProfile" class="profile-form-container">
    <h2>ویرایش اطلاعات کاربری</h2>
    <form id="editProfileForm" method="post" action="#">
        <div class="form-group">
            <label for="firstName">نام:</label>
            <input type="text" id="firstName" name="FirstName" value="@Model.FirstName" class="form-control" placeholder="نام خود را وارد کنید" required />
        </div>

        <div class="form-group">
            <label for="lastName">نام خانوادگی:</label>
            <input type="text" id="lastName" name="LastName" value="@Model.LastName" class="form-control" placeholder="نام خانوادگی خود را وارد کنید" required />
        </div>

        <div class="form-group">
            <label for="email">ایمیل:</label>
            <input type="email" id="email" name="Email" value="@Model.Email" class="form-control" placeholder="ایمیل خود را وارد کنید" required />
        </div>

        <div class="form-group">
            <label for="nationalNumber">کد ملی:</label>
            <input type="text" id="nationalNumber" name="NationalNumber" value="@Model.NationalNumber" class="form-control" placeholder="کد ملی خود را وارد کنید" required />
        </div>

        <div class="form-group">
            <label for="phoneNumber">شماره تلفن:</label>
            <input type="text" id="phoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" placeholder="شماره تلفن خود را وارد کنید" required />
        </div>

        <div class="form-group">
            <label for="title">عنوان:</label>
            <input type="text" id="title" name="Title" value="@Model.Title" class="form-control" placeholder="عنوان خود را وارد کنید" required />
        </div>

        <div class="form-group">
            <label for="province">استان:</label>
            <input type="text" id="province" name="Province" value="@Model.Province" class="form-control" placeholder="استان خود را وارد کنید" required />
        </div>

        <div class="form-group">
            <label for="city">شهر:</label>
            <input type="text" id="city" name="City" value="@Model.City" class="form-control" placeholder="شهر خود را وارد کنید" required />
        </div>

        <div class="form-group">
            <label for="address">آدرس:</label>
            <textarea id="address" name="Address" class="form-control" placeholder="آدرس خود را وارد کنید" rows="3" required>@Model.Address</textarea>
        </div>

        <div class="form-group">
            <label for="description">توضیحات:</label>
            <textarea id="description" name="Description" class="form-control" placeholder="توضیحات اضافی" rows="3" required>@Model.Description</textarea>
        </div>

        <div class="form-group">
            <button type="button" class="btn btn-primary" onclick="submitForm()">ذخیره</button>
        </div>
    </form>
</div>

@section Script {
    <script src="/js/internal/Dashboard.js"></script>
    <script src="/js/internal/messageShow.js"></script>
}