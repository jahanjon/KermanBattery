<div id="changePasswordModal" class="changePasswordModal" style="display:none;text-align: end;>
    <div class="modal-dialog">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <div id="changePasswordStep1">
                <h3>تغییر رمز عبور</h3>
                <input type="text" id="forgot-phone" placeholder="شماره تلفن خود را وارد کنید" />
                <label for="forgot-phone">:شماره تلفن</label>
                <button class="btn btn-primary" onclick="sendVerificationCode()" style="margin-top: 10px;">ارسال کد تایید</button>
            </div>

            <div id="changePasswordStep3" style="display:none;">
                <h3>تغییر رمز عبور جدید</h3>
                <input type="text" class="verifyCode" id="verification-code" placeholder="کد تایید را وارد کنید" />
                <label for="verification-code">:کد تایید</label>
                <input type="password" id="new-password" placeholder="رمز عبور جدید" />
                <label for="new-password">:رمز عبور جدید</label>
                <input type="password" id="confirm-password" class="replayPassword" placeholder="تکرار رمز عبور" />
                <label for="confirm-password">:تکرار رمز عبور</label>
                <button class="btn btn-success" style="margin-right: 67%;" onclick="changePassword()">تغییر رمز عبور</button>
            </div>
        </div>
    </div>
</div>

